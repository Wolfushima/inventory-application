extends ../layout

block content 
    h1 #{title}

    form(method='POST' action='')
        div.form-group
            label(for='name') Camera Category: 
            input#name.form-control(
                type='text'
                placeholder='Film, Digital, etc.'
                name='name'
                value=(undefined===camera_category ? '' : camera_category.name)
                required='true'
            )
        div.form-group
            label(for='description') Description: 
            textarea#description.form-control(
                type='textarea'
                placeholder='Description'
                name='description'
                required='true'
            ) #{(undefined===camera_category ? '' : camera_category.description)}
        button.btn.btn-primary(type='submit') Submit 

    if errors 
        ul 
            for error in errors 
                li!= error.msg 