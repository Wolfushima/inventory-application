extends ../layout

block content 
    h1 #{title}

    p #[strong Do you really want to delete this camera_instance?]

    div(style='margin-left:20px;')

        p #[strong ID:] #{camera_instance._id}

        p #[strong Camera:] 
            a(href=camera_instance.camera.url) #{camera_instance.camera.name}
        p #[strong Color:] #{camera_instance.color}
        
        p #[strong Price:] $#{camera_instance.price}
        p #[strong Condition:] 
            if camera_instance.condition=='New' | camera_instance.condition=='Excellent'
                span.text-success #{camera_instance.condition} 
            else if camera_instance.condition=='Very Good' | camera_instance.condition=='Good'
                span.text-warning #{camera_instance.condition} 
            else
                span.text-danger #{camera_instance.condition} 
            if camera_instance.condition!='New'
                span (Used)
    
    form(method='POST' action='')
        div.form-group
            input#id.form-control(
                type='hidden'
                name='id'
                required='true'
                value=camera_instance._id
            )
        button.btn.btn-primary(type='submit') Delete